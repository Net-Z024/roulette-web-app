@page
@model CaseBattleNew.Pages.LoginModel

<h2>Login</h2>

<form asp-page-handler="OnPost" method="post">
    <div class="form-group">
        <label for="username">Username</label>
        <input asp-for="Username" type="text" id="username" name="username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input asp-for="Password" type="password" id="password" name="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>

<p>
    Don't have an account? <a asp-page="/Register">Register here</a>
</p>
